<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <WebView
            android:layout_width="415dp"
            android:layout_height="480dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/webView" android:layout_marginTop="112dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:layout_marginBottom="112dp"/>
    <EditText
            android:layout_width="274dp"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:text="aarnela.fi"
            android:ems="10"
            android:id="@+id/editUrl"
            android:singleLine="false"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="59dp"
            app:layout_constraintBottom_toTopOf="@+id/webView" app:layout_constraintEnd_toStartOf="@+id/buttonGo"
            android:layout_marginEnd="21dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="3dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="DO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonExec"
            app:layout_constraintStart_toEndOf="@+id/buttonBack"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/buttonNext"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="runJavaScript"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="584dp"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonBack"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="584dp" android:onClick="prev"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonNext"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="54dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="584dp" android:onClick="next"/>
    <Button
            android:text="GO"
            android:layout_width="54dp"
            android:layout_height="51dp" android:id="@+id/buttonGo"
            android:onClick="go"
            app:layout_constraintEnd_toStartOf="@+id/buttonRefresh" android:layout_marginEnd="13dp"
            android:layout_marginBottom="56dp" app:layout_constraintBottom_toTopOf="@+id/webView"
            android:layout_marginStart="2dp" app:layout_constraintStart_toEndOf="@+id/editUrl"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp"/>
    <Button
            android:layout_width="50dp"
            android:layout_height="52dp" android:id="@+id/buttonRefresh"
            app:icon="@android:drawable/ic_menu_rotate" app:iconPadding="0dp" android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@+id/buttonGo" android:layout_marginEnd="7dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="6dp" android:layout_marginBottom="54dp"
            app:layout_constraintBottom_toTopOf="@+id/webView" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>